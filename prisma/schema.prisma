datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model shipments {
  id               Int       @id @default(autoincrement())
  carrier_type     String?
  status           String?
  house_awb        String?
  shipper          String?
  shipper_country  String?
  receiver         String?
  receiver_country String?
  po_number        String?
  carrier          String?
  weight           String?
  volume           String?
  vessel_flight    String?
  latest_cp        String?
  shipper_ref_no   String?
  inco_term        String?
  filename         String?
  packages         Int?
  etd              DateTime?
  eta              DateTime?
  atd              DateTime?
  ata              DateTime?
  created_at       DateTime? @default(now())
  updated_at       DateTime? @updatedAt
  pickup_date      DateTime?

  @@map("shipments")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
